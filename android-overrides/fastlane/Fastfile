default_platform(:android)

platform :android do
  desc "Build release AAB"
  lane :build do
    gradle(
      task: "bundle",
      build_type: "Release",
      properties: {
        "RELEASE_STORE_FILE" => ENV["KEYSTORE_PATH"] || "../stuga_keystore_private.jks",
        "RELEASE_STORE_PASSWORD" => ENV["KEYSTORE_PASSWORD"],
        "RELEASE_KEY_ALIAS" => "stuga",
        "RELEASE_KEY_PASSWORD" => ENV["KEYSTORE_PASSWORD"]
      }
    )
  end

  desc "Deploy to production"
  lane :internal do
    build
    upload_to_play_store(
      track: "production",
      aab: "app/build/outputs/bundle/release/app-release.aab",
      skip_upload_images: true,
      skip_upload_screenshots: true
    )
  end

  desc "Deploy to production"
  lane :production do
    build
    upload_to_play_store(
      track: "production",
      aab: "app/build/outputs/bundle/release/app-release.aab",
      skip_upload_images: true,
      skip_upload_screenshots: true
    )
  end

  desc "Promote internal to production"
  lane :promote_to_production do
    upload_to_play_store(
      track: "internal",
      track_promote_to: "production",
      skip_upload_aab: true,
      skip_upload_metadata: true,
      skip_upload_images: true,
      skip_upload_screenshots: true
    )
  end
end
